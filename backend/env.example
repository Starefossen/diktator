# Backend environment variables for local development
# Copy this file to .env and adjust as needed

# Database configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/diktator?sslmode=disable

# Authentication mode: 'oidc' for production, 'mock' for local development
AUTH_MODE=mock

# OIDC configuration (only needed when AUTH_MODE=oidc)
# OIDC_ISSUER_URL=https://your-oidc-provider.com
# OIDC_AUDIENCE=your-client-id

# Mock user configuration (only used when AUTH_MODE=mock)
MOCK_USER_ID=mock-user-12345
MOCK_USER_EMAIL=dev@localhost
MOCK_USER_NAME=Development User

# Google Cloud configuration (required for TTS)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# TTS Cache configuration
# Maximum cache size in MB (default: 15MB)
TTS_CACHE_SIZE_MB=15

# Server configuration
PORT=8090
