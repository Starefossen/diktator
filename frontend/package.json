{
  "name": "diktator-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "prebuild": "chmod +x ../scripts/generate-sw.sh && ../scripts/generate-sw.sh",
    "build": "next build",
    "postbuild": "rm -f out/sw.template.js",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write . --ignore-path .prettierignore --log-level warn",
    "format:check": "prettier --check . --ignore-path .prettierignore",
    "typecheck": "tsc --noEmit",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "i18n:check": "tsx scripts/check-i18n.ts",
    "i18n:check:strict": "tsx scripts/check-i18n.ts",
    "check": "tsc --noEmit && eslint . --fix --quiet && prettier --write . --ignore-path .prettierignore --log-level warn && knip --fix && tsx scripts/check-i18n.ts -q && vitest run",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "pnpm test && pnpm test:e2e"
  },
  "eslintIgnore": [
    ".next/",
    "out/"
  ],
  "prettierIgnore": [
    ".next/",
    "out/"
  ],
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/postcss": "^4.1.18",
    "axios": "^1.13.2",
    "canvas-confetti": "^1.9.4",
    "flag-icons": "^7.2.3",
    "form-data": "^4.0.5",
    "next": "16.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@swc/core": "^1.15.8",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "axe-core": "^4.11.1",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "globals": "^17.0.0",
    "happy-dom": "^20.0.11",
    "knip": "^5.78.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16",
    "vitest-axe": "^0.1.0"
  }
}
